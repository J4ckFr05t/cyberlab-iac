{
  "vms": [
    {
      "name": "ubuntu-01-desktop",
      "target_node": "proxmox",
      "clone": "ubuntu-desktop-template",
      "full_clone": true,
      "onboot": true,
      "cpu": {
        "cores": 2,
        "sockets": 1,
        "type": "host"
      },
      "memory": 4096,
      "scsihw": "virtio-scsi-single",
      "bootdisk": "scsi0",
      "disks": [
        {
          "slot": "scsi0",
          "size": "64G",
          "type": "disk",
          "storage": "Internal",
          "iothread": true
        },
        {
          "slot": "ide0",
          "type": "cloudinit",
          "storage": "local"
        }
      ],
      "networks": [
        {
          "id": 0,
          "model": "virtio",
          "bridge": "vmbr1",
          "firewall": true
        }
      ],
      "cloudinit": {
        "enabled": true,
        "username": "ubuntu",
        "ipconfig": [
          {
            "interface": "net0",
            "ip": "172.16.10.52/24",
            "gateway": "172.16.10.1"
          }
        ],
        "nameserver": "8.8.8.8"
      },
      "agent": 1,
      "ignore_network_changes": false
    }
  ]
}