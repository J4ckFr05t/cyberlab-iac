{
  "vms": [
    {
      "name": "win11-01-desktop",
      "target_node": "proxmox",
      "clone": "win11-template",
      "full_clone": true,
      "onboot": true,
      "cpu": {
        "cores": 2,
        "sockets": 1,
        "type": "host"
      },
      "memory": 4096,
      "scsihw": "virtio-scsi-pci",
      "bootdisk": "scsi0",
      "disks": [
        {
          "slot": "scsi0",
          "size": "128G",
          "type": "disk",
          "storage": "Internal",
          "iothread": true
        }
      ],
      "networks": [
        {
          "id": 0,
          "model": "virtio",
          "bridge": "vmbr1",
          "firewall": true
        }
      ],
      "cloudinit": {
        "enabled": true,
        "username": "Administrator",
        "ipconfig": [
          {
            "interface": "net0",
            "ip": "172.16.10.50/24",
            "gateway": "172.16.10.1"
          }
        ],
        "nameserver": "8.8.8.8"
      },
      "os_type": "win11",
      "agent": 1,
      "ignore_network_changes": false
    }
  ]
}

